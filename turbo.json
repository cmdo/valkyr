{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "flush": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "ncu": {
      "inputs": ["package.json"]
    },
    "build": {
      "inputs": ["src/**", "tsconfig.json", "tsconfig.build.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["src/**", "tests/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    }
  }
}
