{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "flush": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "outputs": ["dist/**"]
    },
    "test": {
      "inputs": ["src/**", "tests/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
