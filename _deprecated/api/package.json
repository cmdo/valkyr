{
  "name": "@valkyr/api",
  "version": "0.0.0",
  "description": "A collection of tools for building fullstack @valkyr apis",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "server",
    "jsonrpc",
    "event-sourcing",
    "api"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf .turbo && rm -rf dist && rm -f tsconfig.build.tsbuildinfo",
    "test": "jest"
  },
  "jest": {
    "preset": "@valkyr/jest"
  },
  "dependencies": {
    "@valkyr/access": "workspace:*",
    "@valkyr/event-store": "workspace:*",
    "@valkyr/jsonrpc": "workspace:*",
    "@valkyr/ledger": "workspace:*",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.13.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "quicktype": "^20.0.26",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@valkyr/jest": "workspace:*",
    "fastify": "^4.11.0"
  }
}
