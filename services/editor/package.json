{
  "private": true,
  "name": "editor",
  "version": "0.0.0",
  "description": "Visual editor building data solutions for @valkyr projects",
  "scripts": {
    "flush": "npm run clean && rm -rf ./node_modules ./.turbo",
    "clean": "rm -rf dist",
    "lint": "eslint ./src",
    "start": "vite"
