{
  "extends": "@valkyr/typescript",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "esModuleInterop": false,

    "paths": {
      "~Components/*": ["./src/Components/*"],
      "~Middleware/*": ["./src/Middleware/*"],
      "~Services/*": ["./src/Services/*"],
      "~Stores/*": ["./src/Stores/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
