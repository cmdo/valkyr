{
  "name": "valkyr",
  "version": "0.0.0",
  "description": "A collection of TypeScript tools and libraries for Valkyr developers to build event sourced real time applications.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "files": [],
  "workspaces": [
    "./packages/*",
    "./playground/*",
    "./"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf ./packages/**/dist && rm -rf ./playground/**/dist && rm -rf ./packages/**/tsconfig.build.tsbuildinfo && rm -rf .parcel-cache",
    "flush": "npm run clean && npx rimraf ./**/node_modules && rm -rf package-lock.json",
    "publish": "node publish.js",
    "api": "cd ./playground/api && npm start",
    "app": "cd ./playground/app && npm start",
    "web": "cd ./website && npx docusaurus start",
    "lint": "eslint ./packages --ext .ts --fix",
    "test": "jest --maxWorkers=100% --detectOpenHandles",
    "coverage": "jest --ci --coverage --forceExit --maxWorkers=4"
  },
  "devDependencies": {
    "@docusaurus/types": "^2.0.0-beta.17",
    "@types/jest": "27.4.1",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "process": "^0.11.10",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  }
}
