{
  "name": "valkyr",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/cmdo/valkyr",
  "bugs": "https://github.com/cmdo/valkyr/issues",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "build": "turbo run build",
    "flush": "turbo run flush && rm -rf ./node_modules",
    "clean": "turbo run clean",
    "lint": "turbo run lint -- --fix",
    "test": "turbo run test -- --forceExit",
    "cli": "npm run local --prefix packages/cli",
    "api": "npm start --prefix services/api",
    "app": "npm start --prefix services/app",
    "editor": "npm start --prefix services/editor",
    "publish": "node ./scripts/publish.js"
  },
  "valkyr": {
    "name": "@valkyr",
    "input": {
      "adapter": "fs",
      "location": "./generated"
    },
    "output": {
      "api": "./templates/api/src/generated",
      "app": "./templates/app/src/generated"
    }
  },
  "devDependencies": {
    "@valkyr/prettier": "workspace:*",
    "@valkyr/eslint-config": "workspace:*",
    "@valkyr/typescript": "workspace:*",
    "turbo": "1.5.5"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": "@valkyr/prettier"
}
