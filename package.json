{
  "name": "valkyr",
  "version": "0.0.0",
  "description": "A collection of TypeScript tools and libraries for Valkyr developers to build event sourced real time applications.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "files": [],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "rm -rf ./packages/**/dist && rm -rf ./sandbox/**/dist && rm -rf ./packages/**/tsconfig.build.tsbuildinfo",
    "publish": "node ./scripts/publish.js",
    "docs": "npm i --prefix docs && npm run generate --prefix docs",
    "docs:write": "npm i --prefix docs && npm run write --prefix docs",
    "lint": "eslint ./packages --ext .ts --fix",
    "test": "jest --maxWorkers=100% --detectOpenHandles",
    "coverage": "jest --ci --coverage --forceExit --maxWorkers=4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "29.0.0",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.1",
    "jest": "29.0.2",
    "prettier": "2.7.1",
    "process": "0.11.10",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "typescript": "4.8.2"
  }
}
