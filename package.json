{
  "name": "valkyr",
  "version": "0.0.0",
  "description": "A collection of TypeScript tools and libraries for Valkyr developers to build event sourced real time applications.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "files": [],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "publish": "node ./scripts/publish.js",
    "docs": "npm i --prefix docs && npm run generate --prefix docs",
    "docs:write": "npm i --prefix docs && npm run write --prefix docs",
    "lint": "eslint ./packages --ext .ts --fix",
    "test": "jest --maxWorkers=100% --detectOpenHandles",
    "coverage": "jest --ci --coverage --forceExit --maxWorkers=4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/node": "18.7.20",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "process": "0.11.10",
    "turbo": "1.5.5",
    "ts-jest": "29.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  }
}
