{
  "name": "root",
  "files": [],
  "workspaces": [
    "./packages/*",
    "./playground/*",
    "./"
  ],
  "scripts": {
    "prepare": "husky install",

    "clean": "rm -rf ./packages/**/dist && rm -rf ./sandbox/**/dist && rm -rf ./packages/**/tsconfig.build.tsbuildinfo",

    "setup": "lerna bootstrap",

    "build": "lerna run build",
    "build:access": "lerna run build --scope @valkyr/access",
    "build:auth": "lerna run build --scope @valkyr/auth",
    "build:db": "lerna run build --scope @valkyr/db",
    "build:event-cache": "lerna run build --scope @valkyr/event-cache",
    "build:event-store": "lerna run build --scope @valkyr/event-store",
    "build:inverse": "lerna run build --scope @valkyr/inverse",
    "build:router": "lerna run build --scope @valkyr/router",
    "build:server": "lerna run build --scope @valkyr/server",
    "build:socket": "lerna run build --scope @valkyr/socket",
    "build:stores": "lerna run build --scope stores",

    "api": "cd ./playground/api && npm start",
    "app": "cd ./playground/app && npm start",
    "web": "cd ./website && npx docusaurus start",

    "lint": "eslint . --fix",
    "test": "jest --maxWorkers=100%",
    "coverage": "jest --ci --coverage --forceExit --maxWorkers=4",
    "version": "lerna version $1 --yes --no-push --no-git-tag-version --exact",
    "publish": "lerna exec --no-private -- npm publish --tag latest --access public",

    "snap": "sudo rm -rf /etc/docker && sudo snap refresh"
  },
  "devDependencies": {
    "@docusaurus/types": "^2.0.0-beta.14",
    "@types/jest": "27.4.0",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "cmdo-cli": "0.2.5",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "^7.0.4",
    "lerna": "4.0.0",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  }
}
