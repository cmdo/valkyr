{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "[html]": {
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "HookyQR.beautify"
  },  
  "cSpell.words": [
    "bitflag",
    "Bitflags",
    "camelcase",
    "jsxdev",
    "keyval",
    "mingo",
    "nestjs",
    "nocheck",
    "paramtypes",
    "rfdc",
    "signin",
    "tiptap",
    "todos",
    "tsbuildinfo",
    "upsert",
    "valkyr",
    "websockets",
    "Wksp"
  ]
}