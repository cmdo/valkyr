{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "scss.lint.unknownAtRules": "ignore",
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "[html,svg]": {
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "HookyQR.beautify"
  },  
  "cSpell.words": [
    "bitflag",
    "Bitflags",
    "camelcase",
    "CQRS",
    "Instantiator",
    "Instantiators",
    "jsxdev",
    "keyval",
    "kodemon",
    "Legder",
    "Merkle",
    "microservices",
    "mingo",
    "myapp",
    "nestjs",
    "nocheck",
    "paramtypes",
    "peerjs",
    "pids",
    "qrcode",
    "rfdc",
    "semibold",
    "sidepane",
    "signin",
    "tiptap",
    "todos",
    "tsbuildinfo",
    "upsert",
    "valkyr",
    "vlkr",
    "websockets",
    "Wksp"
  ]
}