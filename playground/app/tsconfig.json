{
  "compilerOptions": {
    "types": ["webpack-env"],
    "outDir": "./dist/",
    
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsxdev",
    "paths": {
      "~App": ["./src/App/index"],
      "~Library/*": ["./src/Library/*"],
      "~Assets": ["./src/Assets"],
      "~Styles": ["./src/Styles"]
    },

    "incremental": true,
    "isolatedModules": true,
    "sourceMap": true,
    
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
