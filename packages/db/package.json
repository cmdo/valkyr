{
  "name": "@valkyr/db",
  "version": "0.0.0",
  "description": "Simple client side storage solution written in TypeScript.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "browser",
    "database",
    "mingo",
    "mongodb"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo ./dist",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules pnpm exec jest"
  },
  "jest": {
    "preset": "@valkyr/jest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@valkyr/security": "workspace:*",
    "@valkyr/time": "workspace:*",
    "dot-prop": "7.2.0",
    "fast-equals": "4.0.3",
    "idb": "^7.1.1",
    "mingo": "6.2.1",
    "nanoid": "^4.0.1",
    "rfdc": "1.3.0",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "@valkyr/jest": "workspace:*",
    "fake-indexeddb": "^4.0.1",
    "type-fest": "^3.5.0"
  }
}
