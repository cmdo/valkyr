{
  "name": "@valkyr/testing",
  "version": "0.0.0",
  "description": "A small suite of testing tools for @valkyr packages.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "testing"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo ./dist",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@valkyr/jest": "workspace:*",
    "mongodb-memory-server": "^8.11.4"
  }
}
