{
  "name": "@valkyr/cli",
  "version": "0.0.0",
  "description": "@valkyr command line interface and application generator",
  "bin": {
    "valkyr": "./dist/main.js"
  },
  "type": "module",
  "scripts": {
    "local": "npm uninstall -g && npm run build && npm i -g",
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo && rm -rf ./dist",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@commander-js/extra-typings": "^10.0.1",
    "commander": "^10.0.0",
    "fs-extra": "^11.1.0",
    "prettier": "^2.8.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1"
  }
}
