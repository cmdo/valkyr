{
  "name": "@valkyr/cli",
  "version": "0.0.0",
  "description": "@valkyr command line interface and application generator",
  "bin": {
    "valkyr": "./dist/main.js"
  },
  "type": "module",
  "scripts": {
    "local": "npm uninstall -g && npm run build && npm i -g",
    "build": "tsc",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf .turbo && rm -rf dist && rm -f tsconfig.build.tsbuildinfo"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^10.0.1",
    "commander": "^10.0.0",
    "fs-extra": "^11.1.0",
    "prettier": "^2.8.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@valkyr/jest": "workspace:*"
  }
}