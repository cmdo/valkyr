{
  "name": "@valkyr/ledger",
  "version": "0.0.0",
  "description": "A distributed event sourcing pattern written in TypeScript.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo ./dist",
    "ncu": "ncu -u",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules pnpm exec jest"
  },
  "jest": {
    "preset": "@valkyr/jest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@valkyr/jest": "workspace:*"
  }
}
