{
  "name": "@valkyr/security",
  "version": "0.0.0",
  "description": "Collection of cryptographic and hashing utilities for security functions",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "identity",
    "idp"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo && rm -rf ./dist",
    "lint": "eslint .",
    "test": "jest"
  },
  "jest": {
    "preset": "@valkyr/jest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "jose": "^4.11.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@valkyr/jest": "workspace:*"
  }
}
