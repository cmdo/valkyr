{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "react-jsxdev",

    "incremental": true,
    "isolatedModules": true,
    "sourceMap": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
