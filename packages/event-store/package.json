{
  "name": "@valkyr/event-store",
  "version": "0.0.0",
  "description": "A full stack event store solution for @valkyr/db and mongodb.",
  "repository": "kodemon/valkyr",
  "bugs": "https://github.com/kodemon/valkyr/issues",
  "license": "MIT",
  "main": "./src/EventStore.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo ./dist",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@valkyr"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@valkyr/ledger": "workspace:*",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@valkyr/db": "workspace:*",
    "@valkyr/jest": "workspace:*",
    "mongodb": "^4.13.0"
  }
}
